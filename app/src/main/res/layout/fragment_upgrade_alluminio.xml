<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11CCD3"
    tools:context=".UpgradeAlluminioFragment">

    <ImageView
        android:id="@+id/unitaRicicloAlluminioImm"
        android:layout_width="96dp"
        android:layout_height="93dp"
        android:contentDescription="@string/immagine_unita_riciclo_alluminio"
        android:src="@drawable/industria_alluminio96"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <ImageButton
        android:id="@+id/infoUnitaRicicloAlluminioBtn"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/informazioni_unita_riciclo_alluminio"
        android:src="@drawable/icona_info"
        app:layout_constraintStart_toEndOf="@+id/unitaRicicloAlluminioImm"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tipoUnitaRicicloAlluminioTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="2dp"
        android:text="@string/tipo_unita_alluminio"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lvlUpgradeAlluminioTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="3dp"
        android:text="@string/liv_upgrade"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tipoUnitaRicicloAlluminioTxt" />

    <TextView
        android:id="@+id/lvlUsuraAlluminioTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="3dp"
        android:text="@string/liv_usura"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lvlUpgradeAlluminioTxt" />

    <TextView
        android:id="@+id/totRiciclatiAlluminioTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="3dp"
        android:text="@string/totale_riciclati"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lvlUsuraAlluminioTxt" />

    <TextView
        android:id="@+id/lvlUpgradeAlluminioNumeroTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="3dp"
        android:text="@string/_1"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/lvlUpgradeAlluminioTxt"
        app:layout_constraintTop_toBottomOf="@+id/tipoUnitaRicicloAlluminioTxt" />

    <TextView
        android:id="@+id/lvlUsuraAlluminioNumeroTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="3dp"
        android:text="@string/_0"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/lvlUsuraAlluminioTxt"
        app:layout_constraintTop_toBottomOf="@+id/lvlUpgradeAlluminioTxt" />

    <TextView
        android:id="@+id/lvlUsuraAlluminioMaxTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/_24"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/lvlUsuraAlluminioNumeroTxt"
        app:layout_constraintTop_toBottomOf="@+id/lvlUpgradeAlluminioTxt" />

    <TextView
        android:id="@+id/totRiciclatiAlluminioNumeroTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="3dp"
        android:text="@string/_0"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/totRiciclatiAlluminioTxt"
        app:layout_constraintTop_toBottomOf="@+id/lvlUsuraAlluminioTxt"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/aumentaLvlUnitaAlluminioBtn"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="122dp"
        android:layout_height="55dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#E53935"
        android:backgroundTintMode="add"
        android:text="@string/upgrade_unit"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/totRiciclatiAlluminioTxt"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/costoUpgradeAlluminioTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="24dp"
        android:text="@string/costo_4"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/lvlUpgradeAlluminioNumeroTxt"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/puntiRiciclaggioAlluminioImm"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="25dp"
        android:background="#F6F3F3"
        android:contentDescription="@string/punti_riciclaggio"
        android:src="@drawable/pala48"
        app:layout_constraintStart_toEndOf="@+id/costoUpgradeAlluminioTxt"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/puntiRiciclaggiAlluminioImm3"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginTop="2dp"
        android:background="#F6F3F3"
        android:contentDescription="@string/punti_riciclaggio"
        android:src="@drawable/pala48"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/costoOggettoAlluminio2Txt"
        app:layout_constraintTop_toBottomOf="@+id/ricicloAlluminio2Btn"
        tools:ignore="ImageContrastCheck"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/puntiRiciclaggiAlluminioImm4"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginTop="2dp"
        android:background="#F6F3F3"
        android:contentDescription="@string/punti_riciclaggio"
        android:src="@drawable/pala48"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/costoOggettoAlluminio3Txt"
        app:layout_constraintTop_toTopOf="@+id/costoOggettoAlluminio3Txt"
        tools:ignore="ImageContrastCheck"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/puntiRiciclaggiAlluminioImm2"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_marginTop="2dp"
        android:background="#F6F3F3"
        android:contentDescription="@string/punti_riciclaggio"
        android:src="@drawable/pala48"
        app:layout_constraintStart_toEndOf="@+id/costoOggettoAlluminio1Txt"
        app:layout_constraintTop_toBottomOf="@+id/ricicloAlluminio1Btn"
        tools:ignore="ImageContrastCheck" />

    <ImageButton
        android:id="@+id/ricicloAlluminio1Btn"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#4A4040"
        android:contentDescription="@string/crea_nuovo_oogetto_alluminio_1"
        android:src="@drawable/caffettiera_alluminio_riciclo"
        app:layout_constraintStart_toEndOf="@+id/aumentaLvlUnitaAlluminioBtn"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/ricicloAlluminio2Btn"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#4A4040"
        android:contentDescription="@string/crea_nuovo_oggetto_alluminio_2"
        android:src="@drawable/padella_alluminio_riciclo"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/ricicloAlluminio1Btn"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/ricicloAlluminio3Btn"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#4A4040"
        android:contentDescription="@string/crea_nuovo_oggetto_alluminio_3"
        android:src="@drawable/bicicletta_alluminio_riciclo"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/ricicloAlluminio2Btn"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/costoOggettoAlluminio1Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="1dp"
        android:text="@string/costo_2"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/aumentaLvlUnitaAlluminioBtn"
        app:layout_constraintTop_toBottomOf="@+id/ricicloAlluminio1Btn" />

    <TextView
        android:id="@+id/costoOggettoAlluminio2Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="1dp"
        android:text="@string/costo_4"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/ricicloAlluminio1Btn"
        app:layout_constraintTop_toBottomOf="@+id/ricicloAlluminio2Btn"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/costoOggettoAlluminio3Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:layout_marginTop="1dp"
        android:text="@string/costo_7"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/ricicloAlluminio2Btn"
        app:layout_constraintTop_toBottomOf="@+id/ricicloAlluminio3Btn"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/ricavoRicicloOggettoAlluminio1Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="@string/ricavo_2"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/aumentaLvlUnitaAlluminioBtn"
        app:layout_constraintTop_toBottomOf="@+id/costoOggettoAlluminio1Txt" />

    <TextView
        android:id="@+id/ricavoRicicloOggettoAlluminio2Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:text="@string/ricavo_4"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/ricicloAlluminio1Btn"
        app:layout_constraintTop_toBottomOf="@+id/costoOggettoAlluminio2Txt"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/ricavoRicicloOggettoAlluminio3Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:text="@string/ricavo_7"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/ricicloAlluminio2Btn"
        app:layout_constraintTop_toBottomOf="@+id/costoOggettoAlluminio3Txt"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/puntiSoleRicavoAlluminio1Imm"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="3dp"
        android:contentDescription="@string/punti_sole"
        android:src="@drawable/puntisole24"
        app:layout_constraintStart_toEndOf="@+id/ricavoRicicloOggettoAlluminio1Txt"
        app:layout_constraintTop_toBottomOf="@+id/puntiRiciclaggiAlluminioImm2"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/puntiSoleRicavoAlluminio2Imm"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="3dp"
        android:contentDescription="@string/punti_sole"
        android:src="@drawable/puntisole24"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/ricavoRicicloOggettoAlluminio2Txt"
        app:layout_constraintTop_toBottomOf="@+id/puntiRiciclaggiAlluminioImm3"
        tools:ignore="ImageContrastCheck"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/puntiSoleRicavoAlluminio3Imm"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="1dp"
        android:contentDescription="@string/punti_sole"
        android:src="@drawable/puntisole24"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/ricavoRicicloOggettoAlluminio3Txt"
        app:layout_constraintTop_toBottomOf="@+id/puntiRiciclaggiAlluminioImm4"
        tools:ignore="ImageContrastCheck"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/numeroOggettiCreatiAlluminio1Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/n_0"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ricicloAlluminio1Btn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numeroOggettiCreatiAlluminio2Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="4dp"
        android:text="@string/n_0"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/ricicloAlluminio2Btn"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/numeroOggettiCreatiAlluminio3Txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:text="@string/n_0"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/ricicloAlluminio3Btn"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/informazioniCreazioneOggettoAlluminio1Btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:backgroundTint="#11CCD3"
        android:contentDescription="@string/informazioni_creazione_nuovo_oggetto_alluminio_1"
        android:src="@drawable/icona_info"
        app:layout_constraintStart_toEndOf="@+id/ricicloAlluminio1Btn"
        app:layout_constraintTop_toBottomOf="@+id/numeroOggettiCreatiAlluminio1Txt" />

    <ImageButton
        android:id="@+id/informazioniCreazioneOggettoAlluminio2Btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:backgroundTint="#11CCD3"
        android:contentDescription="@string/informazioni_creazione_nuovo_oggetto_alluminio_2"
        android:src="@drawable/icona_info"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/ricicloAlluminio2Btn"
        app:layout_constraintTop_toBottomOf="@+id/numeroOggettiCreatiAlluminio2Txt"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/informazioniCreazioneOggettoAlluminio3Btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="1dp"
        android:backgroundTint="#11CCD3"
        android:contentDescription="@string/informazioni_creazione_nuova_alluminio_3"
        android:src="@drawable/icona_info"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/ricicloAlluminio3Btn"
        app:layout_constraintTop_toBottomOf="@+id/numeroOggettiCreatiAlluminio3Txt"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tempoRiciclaggioAlluminioTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="3dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totRiciclatiAlluminioTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>