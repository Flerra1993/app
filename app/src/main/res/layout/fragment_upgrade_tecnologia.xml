        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/ricicloTecnologia2Btn"
        app:layout_constraintTop_toBottomOf="@+id/costoOggettoTecnologia3Txt"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/puntiSoleRicavoTecnologia1Imm"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="3dp"
